{% extends 'admin/base.html.twig' %}

{% block title %}Edit Video{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h4 mb-0">Edit Video</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        {# Поле "Image" #}
                        <div class="mb-3">
                            {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.image) }}
                            </div>
                        </div>

                        {# Автоматически сгенерированные поля формы #}
                        {{ form_widget(form) }}

                        {# Кнопка "Save" #}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>

                        {{ form_end(form) }}
                    </div>
                </div>

                {# Кнопка "Back to list" #}
                <a href="{{ path('admin_video_index') }}" class="btn btn-secondary mt-3">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
            </div>
        </div>
    </div>
{% endblock %}