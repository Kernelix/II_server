{% extends 'base.html.twig' %}

{% block content %}
    <div class="gallery-detail-container">
        <!-- Основное изображение -->
        <div class="main-image-container">
            <div class="image-wrapper">
                <img
                        src="{{ asset('uploads/images/l/' ~ parentImage.filename) }}"
                        alt="{{ parentImage.description|default('') }}"
                        class="main-image"
                        loading="eager"
                >
            </div>
            {% if parentImage.description %}
                <div class="image-meta">
                    <div class="description-box">
                        {{ parentImage.description }}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Дочерние изображения -->
        {% if childImages is not empty %}
            <div class="child-images-section">
                <h2>Related Images</h2>
                <div class="child-images-grid">
                    {% for child in childImages %}
                        <div class="child-image-item">
                            <img
                                    src="{{ asset('uploads/images/l/' ~ child.filename) }}"
                                    alt="{{ child.description|default('') }}"
                                    loading="lazy"
                                    class="child-image"
                            >
                            {% if child.description %}
                                <p class="child-image-description">{{ child.description }}</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <!-- Видео -->
        {% if videos is not empty %}
            <div class="videos-section">
                <h2>Related Videos</h2>
                <div class="videos-grid">
                    {% for video in videos %}
                        <div class="video-item">
                            <div class="video-container">
                                <iframe
                                        width="560"
                                        height="315"
                                        src="https://www.youtube.com/embed/{{ video.youtubeUrl|split('v=')[1] }}"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen
                                ></iframe>
                            </div>
                            {% if video.title %}
                                <h3 class="video-title">{{ video.title }}</h3>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

        <style>
             /* Основные цвета */
         :root {
             --bg-dark: #0a0a0a;
             --bg-elements: #111111;
             --text-primary: #e5e5e5;
             --text-secondary: #888888;
             --accent-border: #2a2a2a;
         }

        /* Сброс базовых стилей */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        body {
            background-color: var(--bg-dark) !important;
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
        }



        /* Контейнер для основного изображения */
        .image-wrapper {
            background: var(--bg-elements);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

        /* Блок с описанием */
        .description-box {
            background: var(--bg-elements);
            border: 1px solid var(--accent-border);
            padding: 1.5rem;
            margin-top: 1.5rem;
            border-radius: 4px;
        }

        /* Видео-контейнеры */
        .video-container {
            background: var(--bg-elements);
            border: 1px solid var(--accent-border);
            border-radius: 4px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .video-container:hover {
            transform: translateY(-3px);
        }

        .gallery-detail-container {
            max-width: 1440px;
            padding: 2rem;
        }

        .main-image-container {
            background: var(--bg-elements);
            border: 1px solid var(--accent-border);
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 3rem;
        }

        .image-description p {
            color: var(--text-secondary);
            font-size: 1rem;
            line-height: 1.6;
            margin: 1.5rem 0 0;
        }

        .child-images-section h2,
        .videos-section h2 {
            color: var(--text-primary);
            font-size: 1.25rem;
            letter-spacing: -0.01em;
            margin: 3rem 0 1.5rem;
        }

        .child-image-item {
            background: var(--bg-elements);
            border: 1px solid var(--accent-border);
            border-radius: 4px;
        }

        .child-image {
            border-radius: 4px 4px 0 0;
        }

        .child-image-description {
            padding: 1rem;
            color: var(--text-secondary);
            font-size: 0.875rem;
            border-top: 1px solid var(--accent-border);
        }

        .video-item {
            background: var(--bg-elements);
            border: 1px solid var(--accent-border);
            border-radius: 4px;
            overflow: hidden;
        }

        .video-title {
            padding: 1rem;
            color: var(--text-primary);
            font-size: 0.875rem;
            margin: 0;
            border-top: 1px solid var(--accent-border);
        }
    </style>
{% endblock %}